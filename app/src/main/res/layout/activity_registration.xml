<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".RegistrationActivity" android:background="#A4E2E7">
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/username_edittext_reg"
                android:background="@drawable/rounded_edittext_register_login"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="24dp"
                android:layout_marginTop="50dp"
                android:hint="Username"
                android:paddingLeft="15dp"
                app:layout_constraintTop_toBottomOf="@+id/select_photo_button_register"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/firstname_edittext_reg"
                android:background="@drawable/rounded_edittext_register_login"
                app:layout_constraintStart_toStartOf="@+id/username_edittext_reg"
                app:layout_constraintEnd_toEndOf="@+id/username_edittext_reg"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/username_edittext_reg"
                android:hint="Enter First Name"
                android:paddingLeft="15dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastname_edittext_reg"
                android:background="@drawable/rounded_edittext_register_login"
                app:layout_constraintStart_toStartOf="@+id/firstname_edittext_reg"
                app:layout_constraintEnd_toEndOf="@+id/firstname_edittext_reg"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/firstname_edittext_reg"
                android:hint="Enter Last Name"
                android:paddingLeft="15dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_edittext_reg"
                android:background="@drawable/rounded_edittext_register_login"
                app:layout_constraintStart_toStartOf="@+id/lastname_edittext_reg"
                app:layout_constraintEnd_toEndOf="@+id/lastname_edittext_reg"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/lastname_edittext_reg"
                android:hint="Email"
                android:paddingLeft="15dp"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_edittext_reg"
                app:layout_constraintStart_toStartOf="@+id/email_edittext_reg"
                app:layout_constraintEnd_toEndOf="@+id/email_edittext_reg"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/email_edittext_reg"
                android:background="@drawable/rounded_edittext_register_login"
                android:hint="Password"
                android:paddingLeft="15dp"
        />
        <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_register_site"
                app:layout_constraintStart_toStartOf="@+id/password_edittext_reg"
                app:layout_constraintEnd_toEndOf="@+id/password_edittext_reg"
                app:layout_constraintTop_toBottomOf="@+id/password_edittext_reg" android:layout_marginTop="8dp"
                android:background="@drawable/rounded_spinner"/>
        <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/spinner_down_arrow_icon"
                android:id="@+id/imageView_spinner_arrow"
                app:layout_constraintEnd_toEndOf="@+id/spinner_register_site" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_register_site"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_register_site"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/enter_referral_code"
                app:layout_constraintStart_toStartOf="@+id/spinner_register_site"
                app:layout_constraintEnd_toEndOf="@+id/spinner_register_site"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_register_site"
                android:background="@drawable/rounded_edittext_register_login"
                android:hint="Enter Referral Code"
                android:paddingLeft="15dp"
        />
        <Button
                android:text="Register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_register"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button_register_login"
                app:layout_constraintTop_toBottomOf="@+id/enter_referral_code"
                app:layout_constraintStart_toStartOf="@+id/enter_referral_code"
                app:layout_constraintEnd_toEndOf="@+id/enter_referral_code"
                android:textColor="@android:color/white"
                android:textStyle="bold"
        />
        <TextView
                android:text="Already have an account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_account_exits" app:layout_constraintEnd_toEndOf="@+id/button_register"
                app:layout_constraintStart_toStartOf="@+id/button_register"
                app:layout_constraintTop_toBottomOf="@+id/button_register" android:textSize="16sp"
                android:textColor="#07496D" android:textStyle="bold" android:layout_marginTop="16dp"/>
        <Button
                android:text="Select Photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/select_photo_button_register"
                android:layout_marginTop="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/rounded_button_select_photo"
                android:textColor="@android:color/white"
                android:textStyle="bold"
        />
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_width="4dp"
                app:layout_constraintEnd_toEndOf="@+id/select_photo_button_register"
                app:layout_constraintStart_toStartOf="@+id/select_photo_button_register"
                app:layout_constraintTop_toTopOf="@+id/select_photo_button_register"
                app:layout_constraintBottom_toBottomOf="@+id/select_photo_button_register"
                android:id="@+id/selectimageview_register"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toTopOf="@+id/email_edittext_reg"
                app:layout_constraintBottom_toBottomOf="@+id/email_edittext_reg"
                app:layout_constraintStart_toStartOf="@+id/email_edittext_reg"
                app:layout_constraintEnd_toEndOf="@+id/email_edittext_reg"/>
        <TextView
                android:text="Your registration is successful !! Click here to login"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/registration_success_textview"
                app:layout_constraintStart_toStartOf="@+id/username_edittext_reg"
                app:layout_constraintBottom_toTopOf="@+id/username_edittext_reg" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/selectimageview_register" android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" android:textSize="18sp"
                android:layout_marginBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>